<% if (title) { %>
    <h1><%= title %></h1>
    <p><%- messages() %></p>
  
    <% if (errors && errors.length > 0) { %> 
      <ul class="notice">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <form class="management-forms" action="/inv/add-classification" method="post">
      <label for="classification_name">Classification Name:</label>
      <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z0-9]+$">
      <p>**The new classification name may not include spaces or special characters!**</p>
  
      <button type="submit">Add Classification</button>
    </form>
  
  <% } else { %>
    <%= res.redirect('/') %>
  <% } %>
  