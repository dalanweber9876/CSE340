<% if (title) { %>
    <h1><%= title %></h1>
    <p><%- messages() %></p>
  
    <% if (errors && errors.array().length > 0) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <form id="deleteForm" class="management-forms" action="/inv/delete" method="post">
  
      <label for="inv_make">Make</label>
      <input type="text" name="inv_make" id="inv_make" required readonly value="<%= locals.inv_make %>">
  
      <label for="inv_model">Model</label>
      <input type="text" name="inv_model" id="inv_model" required readonly value="<%= locals.inv_model %>">
  
      <label for="inv_year">Year</label>
      <input type="text" name="inv_year" id="inv_year" pattern="\d{4}" required readonly value="<%= locals.inv_year %>">
  
      <label for="inv_price">Price</label>
      <input type="number" name="inv_price" id="inv_price" step="0.01" required readonly value="<%= locals.inv_price %>">
  
      <button type="submit">Delete Vehicle</button>
      
      <p>Confirm Deletion - The delete is permanent.</p>

      <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
  
  <% } else {
    res.redirect('/')
  } %>
