<% if (title) { %>
    <h1 class="management-title"><%= title %></h1>
    <p class="management-messages"><%- messages() %></p>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <h2>Welcome <%- locals.accountData.account_firstname %>!</h2>

    <div class="management-body">
      <p>You're logged in!</p>
      <p><a href="/account/edit/<%- locals.accountData.account_id %>">Edit Account Information</a></p>
      <% if(locals.accountData.account_type != 'Client') { %>
        <p><a href="/inv">Manage Inventory</a></p>
        <% } %>

      <% } else {
        res.redirect('/')
      } %>
    </div>

    

